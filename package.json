{
  "name": "collaborative-law",
  "description":
    "A sample application for drafting, explaining, debating, changing, and visualizing a bill.",
  "version": "1.0.0",
  "author": "democracy-ia",
  "bugs": {
    "url": "https://github.com/democracy-ia/collaborative-law/issues"
  },
  "commitplease": {
    "style": "angular",
    "types": [
      "build",
      "chore",
      "ci",
      "docs",
      "feat",
      "fix",
      "perf",
      "refactor",
      "revert",
      "style",
      "test"
    ],
    "scope": "\\S+.*"
  },
  "contributors": [],
  "dependencies": {
    "@octokit/rest": "14.0.9",
    "request": "2.83.0",
    "xml-js": "1.6.2"
  },
  "devDependencies": {
    "@semantic-release/changelog": "1.0.1",
    "@semantic-release/git": "3.0.1",
    "@semantic-release/npm": "3.0.2",
    "ajv": "6.1.1",
    "commitplease": "3.2.0",
    "coveralls": "^2.13.1",
    "eslint": "4.18.1",
    "eslint-config-prettier": "^2.4.0",
    "eslint-config-xo": "^0.18.2",
    "eslint-plugin-import": "2.9.0",
    "eslint-plugin-jsdoc": "3.5.0",
    "eslint-plugin-node": "6.0.1",
    "eslint-plugin-prettier": "^2.2.0",
    "eslint-plugin-promise": "3.6.0",
    "eslint-plugin-security": "1.4.0",
    "eslint-plugin-standard": "3.0.1",
    "eslint-plugin-unicorn": "4.0.2",
    "eslint-plugin-xss": "0.1.9",
    "fixpack": "2.3.1",
    "husky": "^0.14.3",
    "jest": "^22.4.2",
    "lint-staged": "^4.2.1",
    "markdown-magic": "0.1.18",
    "markdown-magic-install-command": "1.3.1",
    "nsp": "^3.2.1",
    "prettier": "^1.7.0",
    "semantic-release": "13.4.1"
  },
  "eslintConfig": {
    "extends": ["xo", "prettier"],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ]
    },
    "plugins": ["prettier"]
  },
  "files": ["lib"],
  "homepage": "https://github.com/democracy-ia/collaborative-law#readme",
  "jest": {
    "automock": false,
    "collectCoverage": true,
    "coverageDirectory": "docs/coverage",
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "projects": ["<rootDir>"],
    "testEnvironment": "node"
  },
  "keywords": ["law"],
  "license": "MIT",
  "lint-staged": {
    "*.js": ["eslint --fix", "git add"],
    "*.json": ["prettier --write", "git add"]
  },
  "main": "index.js",
  "maintainers": [],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/democracy-ia/collaborative-law.git"
  },
  "scripts": {
    "docs": "npm run docs:toc",
    "docs:toc": "md-magic --path '**/*.md' --ignore 'node_modules'",
    "lint": "npm run lint:manifest",
    "lint:js": "lint-staged",
    "lint:manifest": "fixpack",
    "precommit": "lint-staged",
    "prepare": "npm run lint && npm run security",
    "prepublish": "nsp check",
    "pretest": "npm run lint",
    "security": "npm run security:nsp:scan",
    "security:nsp:scan": "nsp check",
    "test": "jest --forceExit"
  }
}
